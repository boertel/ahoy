{
  "version": "0.1.5",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "access": "public",
  "bin": {
    "ahoy": "bin/ahoy.js"
  },
  "files": [
    "bin",
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch --format esm --target node",
    "build": "tsdx build --format esm --target node",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@boertel/ahoy",
  "author": "Benjamin Oertel <benjamin.oertel@gmail.com>",
  "module": "dist/ahoy.esm.js",
  "size-limit": [
    {
      "path": "dist/ahoy.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/ahoy.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.10.2",
    "husky": "^6.0.0",
    "size-limit": "^4.10.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@slack/webhook": "^6.0.0",
    "yargs": "^15.4.1"
  }
}
